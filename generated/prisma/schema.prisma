generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id                Int              @id @default(autoincrement())
  username          String           @unique
  password          String
  email             String           @unique
  role              Role             @default(user)
  token             String?
  active            Boolean          @default(true)
  whatsappNumbers   WhatsAppNumber[]
  AiTokensUse       Int              @default(0)
  AiTokensLimit     Int              @default(50000)
  tokensPerResponse Int              @default(120)
  Payment           Payment[]
  Agent             Agent[]
}

model WhatsAppNumber {
  id             Int     @id @default(autoincrement())
  number         String
  name           String  @default("Sin Nombre")
  aiEnabled      Boolean @default(false)
  aiPrompt       String  @default("")
  aiModel        String  @default("gemini-1.5-turbo")
  responseGroups Boolean @default(false)
  user           User    @relation(fields: [userId], references: [id])
  userId         Int
}

model Telemetry {
  id              Int      @id @default(autoincrement())
  timeStamp       DateTime @default(now())
  cpuUsageMs      Int?
  ramUsageMB      Int?
  networkEgressKB Int?
  ip              String?
  country         String?
  city            String?
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Float
  currency  String   @default("USD")
  status    String   @default("pending")
  reference String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Agent {
  id       Int     @id @default(autoincrement())
  title    String
  prompt   String
  ownerId  Int
  owner    User    @relation(fields: [ownerId], references: [id])
  isGlobal Boolean @default(false)
}
